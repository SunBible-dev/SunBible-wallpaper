{
    "build": {
        "appId": "app.sunbible.wallpaper",
        "productName": "SunBible WallPaper"
    },
    "name": "sunbible-wallpaper",
    "version": "0.0.1",
    "description": "Bible wallpaper for your pc desktop!",
    "main": "main.js",
    "homepage": "https://github.com/SunBible-dev/SunBible-wallpaper",
    "license": "MIT",
    "maintainers": [
        "NCR",
        "The SunShining"
    ],
    "author": "The SunShining <thesunshining@gmail.com> (www.thesunshining.weebly.com)",
    "keywords": [
        "SunShining",
        "Bible"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/SunBible-dev/SunBible-wallpaper.git"
    },
    "devDependencies": {
        "electron": "^12.0.0-beta.4",
        "electron-builder": "^22.9.1"
    },
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "deb": "electron-builder --linux deb",
        "AppImage": "electron-builder --linux AppImage",
        "snap": "electron-builder --linux snap",
        "apk": "electron-builder --linux apk",
        "appx": "electron-builder --windows appx",
        "nsis": "electron-builder --win nsis",
        "nsis-web": "electron-builder --win nsis-web",
        "dmg": "electron-builder --mac dmg"
    },
    "dependencies": {
        "wallpaper": "^4.4.2"
    }
}
